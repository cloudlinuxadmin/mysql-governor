+		governor_charset_bin.coll->strnncoll = governor_my_strnncoll_8bit_bin;
+		governor_charset_bin.coll->hash_sort = governor_hash_sort_8bit_bin;
+		if (hash_init(mysql_lve_mutex_governor, &governor_charset_bin, 500, 0,
